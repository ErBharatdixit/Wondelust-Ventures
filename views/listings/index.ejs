<% layout("/layouts/boilerplate") %>

      <body>
            <h3>All Listings</h3>
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                  <% for (let listing of allListings) { %>
                        <% if (listing) { %>
                              <a href="/listings/<%= listing._id %>" class="listing_links">
                                    <div class="card col">
                                          <img src="<%= listing.image ? listing.image.url : '/path/to/default-image.jpg' %>"
                                                class="card-img-top" alt="listing_image" style="height: 20rem">
                                          <div class="card-body">
                                                <p class="card-text">
                                                      <b>
                                                            <%= listing.title %>
                                                      </b><br />
                                                <p>
                                                      &#8377; <%= (listing.price !=null) ?
                                                            listing.price.toLocaleString("en-IN") : 'N/A' %> / night
                                                </p>
                                                </p>
                                          </div>
                                    </div>
                              </a>
                              <% } %>
                                    <% } %>
            </div>
      </body>

