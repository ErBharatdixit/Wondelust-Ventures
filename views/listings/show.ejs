<% layout("/layouts/boilerplate") %>

      <body>
            <div class="row">
                  <div class="col-8 offset-2">
                        <h3>Listings Details</h3>
                  </div>
                  <div class="col-6 offset-2 show-card">
                        <div class="card">
                              <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image"
                                    style="height: 20rem">
                              <div class="card-body">
                                    <p class="card-text">
                                          <b>
                                                <%= listing.title %>
                                          </b><br />
                                    <ul>
                                          <li>
                                                <%= listing.description %>
                                          </li>
                                          <li>
                                                &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN")
                                                      : 'Not available' %>
                                          </li>
                                          <li>
                                                <%= listing.location %>
                                          </li>
                                          <li>
                                                <%= listing.country %>
                                          </li>
                                    </ul>
                                    </p>
                              </div>
                        </div>
                  </div>

                  <div class="btns">
                        <a href="/listings/<%= listing._id %>/edit"
                              class="Edit-btn btn btn-dark col-1 offset-2 mb-3">Edit</a>
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                              <button class="btn btn-dark offset-4 mb-3">Delete</button>
                        </form>
                  </div>
            </div>
      </body>
     
      
