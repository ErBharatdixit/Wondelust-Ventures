 
<% layout("/layouts/boilerplate") %>
     <body>
            <div class="row">
                  <div class="col-8 offset-2">
                        <h3><%= listing.title %></h3>
                  </div>
                  <div class="col-6 offset-2 show-card">
                        <div class="card">
                              <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image"
                                    style="height: 20rem">
                              <div class="card-body">
                                    <p class="card-text">
                                        <b> <i> Owned by:<%= listing.owner.username%></i> </b>
                                          <br/>
                                        
                                    <ul>
                                          <li>
                                                <%= listing.description %>
                                          </li>
                                          <li>
                                                &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN")
                                                      : 'Not available' %>
                                          </li>
                                          <li>
                                                <%= listing.location %>
                                          </li>
                                          <li>
                                                <%= listing.country %>
                                          </li>
                                    </ul>
                                    </p>
                              </div>
                        </div>
                  </div>
              <% if( currUser && currUser._id.equals(listing.owner._id)) { %>

<div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="Edit-btn btn btn-dark col-1 offset-2 mb-3">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-4 mb-3">Delete</button>
      </form>
</div>


             <% }%>



                  <div class="btns">
                        <a href="/listings/<%= listing._id %>/edit"
                              class="Edit-btn btn btn-dark col-1 offset-2 mb-3">Edit</a>
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                              <button class="btn btn-dark offset-4 mb-3">Delete</button>
                        </form>
                  </div>
                  <% if(currUser) {%>
                  <div class="col-8 offset-3">
                        <hr>
                        <h4> Leave a Review</h4>
                        <form action="/listings/<%= listing._id%>/reviews" method="POST">
                         <div class="mb-3 mt-3">
                              <label for="rating" class="form-label">Rating</label>
                              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
                         </div>
                         <div class="mb-3">
                              <label for="comment" class="form-label">Comments</label>
                              <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                         </div>
                         <button class=" btn btn-outline-dark mb-3">Submit</button>
                        </form>
                        <% } %>
                        <hr/>
                        <p><b>All Reviews</b></p>
                        <div class="row">
                        <% for(review of listing.reviews) {%>
                        
                             
                              <div class=" card col-6 mb-3">
                                    <div class="card-body">
                                          <h5 class="card-title">@<%= review.author.username %></h5>
                                          <p class="card-text"> <%=review.comment%></p>
                                          <p class="card-text"><%=review.rating%>stars </p>
                                    </div>
                                    <form class="mb-3" method="POST" action="/listings/<%= listing._id%>/reviews/<%= review._id %>?_method=DELETE">
                                       <button class="btn btn-sm btn-dark">Delete</button>   
                              
                                          
                                    </form>

                                     
                              </div>

                              <%}%>
                  </div>
            </div>
            </div>
      </body>
     
      
