<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
<h2 class="col-6 offset-3">Singup on WanderLust</h2>
<div class="col-6 offset-3">

      <form action="/signup" method="POST" class="needs-validation" novalidate>
<div class="row">
      <div class="col-8 offset-2">
            <div class="mb-3">
                  <lable for="username" class="form-label">Username</lable>
                  <input name="username" placeholder="enter your username" type="text" class="form-control" id="username" required>
                  <div class="valid-feedback">
                         Looks good!
                  </div>
            </div>
            <div class="mb-3">
                  <lable for="email" class="form-label">Email</lable>
                  <input name="email" placeholder="enter your email" type="text" class="form-control" id="email" required>
                  <div class="valid-feedback">
                        Looks good!
                  </div>
            </div>
            <div class="mb-3">
                  <lable for="password" class="form-label">Password</lable>
                  <input name="password" placeholder="enter password" type="text" class="form-control" id="password " required>
                  <div class="valid-feedback">
                        Looks good!
                  </div>
            </div>
        <button class="btn btn-success">Singup</button>
      </form>

</div>
</div>