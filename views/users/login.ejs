<% layout("/layouts/boilerplate") %>

      <div class="row mt-3">
            <h2 class="col-6 offset-3">Login on WanderLust</h2>
            <div class="col-6 offset-3">

                  <form action="/login" method="POST" class="needs-validation" novalidate>
                        <div class="row">
                              <div class="col-8 offset-2">
                                    <div class="mb-3">
                                          <lable for="username" class="form-label">Username</lable>
                                          <input name="username" placeholder="enter your username" type="text" class="form-control" id="username" required>
                                               
                                    </div>
                                   
                                    <div class="mb-3">
                                          <lable for="password" class="form-label">Password</lable>
                                          <input name="password" placeholder="enter password" type="text" class="form-control" id="password " required>
                                               
                                    </div>
                                    <button class="btn btn-success">Login</button>
                              </form>

                        </div>
            </div>